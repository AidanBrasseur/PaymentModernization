<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceDetails.InvoiceDetailsActivity"
    tools:showIn="@layout/activity_invoice_details">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/total_price_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:text="$123.00"
            android:textSize="36sp"
            android:textStyle="bold"></TextView>
        <Button
            android:id="@+id/statusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_button"
            android:text="Status"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_anchorGravity="center_horizontal" />

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="329dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:background="#808080">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/supplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeholder supplier"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/supplier_streetaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 placeholder drive"></TextView>

            <TextView
                android:id="@+id/supplier_region_postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder, Ontario, 12345"></TextView>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/bill_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill TO"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/recipient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"></TextView>

                <TextView
                    android:id="@+id/recipient_street_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29 placeholder drive"></TextView>
                <TextView
                    android:id="@+id/recipient_region_postal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placeholder, Ontario, 12345"></TextView>
            </LinearLayout>

        <TableLayout
            android:id="@+id/invoice_info_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:paddingVertical="25dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/invoice_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Invoice Id:" />

                <TextView
                    android:id="@+id/invoice_id_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="12345" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/invoice_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Invoice Date:" />

                <TextView
                    android:id="@+id/invoice_date_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="November 29, 1212311313" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Due Date:" />

                <TextView
                    android:id="@+id/due_date_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="December 5, 121312121" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/delivery_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Delivery Person:" />

                <TextView
                    android:id="@+id/delivery_driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="John Doe" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="end">

            <TableLayout
                android:id="@+id/items_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:paddingTop="35dp"
                android:shrinkColumns="2,3"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Description"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_column="2"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Quantity"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Price"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="Total Price: 0.00"
                android:textAlignment="viewEnd" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
