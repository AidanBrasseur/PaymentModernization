<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paymentmodernization">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CreateInvoice.CreateInvoice"
            android:label="@string/title_activity_create_invoice"
            android:theme="@style/AppTheme.NoActionAndStatusBar"></activity>
        <activity
            android:name=".MainActivity.NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionAndStatusBar" />
        <activity android:name=".SignUp.DriverSignUp" />
        <activity android:name=".SignUp.SignUpChoiceActivity" />
        <activity android:name=".SignUp.CompanySignUp" />
        <activity android:name=".InvoiceDetails.InvoiceDetailsActivity"
            android:label="Invoice Details"
            android:theme="@style/AppTheme.NoActionAndStatusBar"/>
        <activity
            android:name=".HomePage.InvoicesFragment"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionAndStatusBar" />
        <activity
            android:name=".Login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>